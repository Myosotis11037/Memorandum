<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_copper_crown">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/b20"
        android:paddingTop="@dimen/b20"
        android:paddingRight="@dimen/b20"
        android:background="@drawable/edittext_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1111"
                android:textColor="@color/black"
                android:textSize="@dimen/b32"
                android:textStyle="bold"
                tools:ignore="SpUsage"/>
            <TextView
                android:id="@+id/note_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="工作"
                android:textColor="@color/color_black"
                android:textSize="@dimen/b32"
                android:textStyle="italic"
                tools:ignore="SpUsage"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022-06-29"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_black_alpha40"/>

            <TextView
                android:id="@+id/note_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/b25"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textSize="@dimen/b30"
                android:text="test"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <Button
            android:id="@+id/note_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_red"
            android:text="删除"
            android:layout_gravity="right"/>
    </LinearLayout>



</LinearLayout>